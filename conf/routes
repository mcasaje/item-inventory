# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page - Play Test Page
GET         /                                       @pages.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)


# App Users

GET         /users/new                              @pages.appusers.SignUpPage.get()
POST        /users/new                              @pages.appusers.SignUpPage.post()

GET         /users/login                            @pages.appusers.LoginPage.get()
POST        /users/login                            @pages.appusers.LoginPage.post()
#GET        /users/logout

GET         /dashboard                          @pages.appusers.DashboardPage.get()

# Item Types

GET         /item_types                             @pages.items.types.ItemTypesPage.get()
POST        /item_types                             @pages.items.types.NewItemTypePage.post()

GET         /item_types/:item_type_id/edit          @pages.items.types.EditItemTypePage.get(item_type_id:Integer)
POST        /item_types/:item_type_id/fields        @pages.items.types.EditItemTypePage.postField(item_type_id:Integer)
POST        /item_types/:item_type_id/tags          @pages.items.types.EditItemTypePage.postTag(item_type_id:Integer)


# Items

GET         /library/:item_type_id/items        @pages.items.ItemsPage.get(item_type_id:Integer)
POST        /library/:item_type_id/items        @pages.items.ItemsPage.post(item_type_id:Integer)
